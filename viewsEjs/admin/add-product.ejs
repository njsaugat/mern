    <%- include('../includes/head.ejs') %> 
    <link rel="stylesheet" href="/public/css/addProduct.css">
</head>
<body>
    <%- include('../includes/navigation.ejs') %> 
    <div class="error-display" >
        <% if(errorMessage) {%> 
            <div class="user-message user-message--error"><%= errorMessage %> </div>
            <% } %> 
    </div>
    <main>
        <form class= "product-form" action="/admin/add-product" method="POST" enctype="multipart/form-data">
            <h1>Add your products!</h1>
            <div class="form-control">
                <label for="title">Enter Text</label>
                <input type="text" name="title" value="<%= finalProduct.title?finalProduct.title:'' %>">
            </div>
            
             <div class="form-control" >
                <label for="imageUrl"> Image </label>
                <div style="text-align:center;"><input type="file" name="image"></div>
            </div>
            <div class="form-control">
                <label for="price">Enter Price</label>
                <input type="number" name="price" step="0.01" value="<%= finalProduct.price?finalProduct.price:'' %>">
            </div>
            <div class="form-control">
                <label for="description">Enter Description</label>
                <!-- <input type="text" name="description"> -->
                <textarea name="description" id="description" rows="8"><%= finalProduct.description?finalProduct.description:'' %></textarea>
            </div>
            <div class="button">
                <button type="submit">Submit</button>
            </div>
        </form>
    </main>
</body>
</html>