<%- include('../includes/head.ejs') %> 
<link rel="stylesheet" href="/public/css/addProduct.css"> 
</head>
<body>
<%- include('../includes/navigation.ejs') %>
    <div class="error-display" >
        <% if(errorMessage) {%> 
            <div class="user-message user-message--error"><%= errorMessage %> </div>
            <% } %> 
    </div>
<main>
    <form class= "login-form" action="/login" method="POST">
        <div class="form-control">
            <label for="email">E-Mail</label>
            <input class="<%=validationErrors.find(e=>e.param==='email')? 'invalid' : ''%> "
            type="email" name="email" id="email" value="<%=oldInput.email %> ">
        </div>
        <div class="form-control">
            <label for="password">Enter Password</label>
            <input class="<%=validationErrors.find(e=>e.param==='password')? 'invalid' : ''%> "
            type="password" name="password" id="password" value="<%=oldInput.password ? oldInput.password : '' %> ">
        </div>
        <div class="centered">
            <a href="/reset">Reset Password </a>
        </div>
        <div class="button">
            <button type="submit">Login</button>
        </div>
    </form>
