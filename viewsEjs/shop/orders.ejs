<%- include('../includes/head.ejs') %>
<link rel="stylesheet" href="/public/css/shop.css" />
</head>

<body>
<%- include('../includes/navigation.ejs')%>
    <main>
        <% if(products.length<= 0){%> 
            <h1>Nothing Here!</h1>
        <% } else{ %>
            <ul>
                <% let num=1 %> 
                <% products.forEach(product=>{%>
                    <li>
                        <h1>#<%= num++ %> </h1>
                        <li><%= product.title %> </li>
                        <li>Quantity:<%= product.quantity %> 
                        </li>

                        
                    </li>
                    
                <%  }) %> 
            </ul>
            <div class="btn">
                <button>Place Order</button>
            </div>
            -- <a href="">Invoice</a>
        <% } %>  
    </main>
</body>
</html>